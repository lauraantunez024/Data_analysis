#Importing libraries

import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns
from scipy.stats import pearsonr
from scipy.stats import f_oneway
from statsmodels.stats.multicomp import pairwise_tukeyhsd
from sklearn.preprocessing import StandardScaler

#Imported the insurance csv file and then converted all the columns 
#to their own individual variables for easier accesibility later.

insurance = pd.read_csv('insurance.csv')
#columns to variables
age = insurance.age
sex = insurance.sex
bmi = insurance.bmi
children = insurance.children
smoker = insurance.smoker
region = insurance.region
charges = insurance.charges

#I ran a loop that converted all of the columns into barplots 
#to see if there was any evident significance in any of the individual columns. 
#The only thing that was evident from the data was that there was a significant 
#number of 18 and 19 year olds compared to the other ages.

columns = insurance.columns.tolist()
for column in columns:
    sns.countplot(insurance[column])
    plt.show()
    plt.clf()
